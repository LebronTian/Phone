.partner {
	/*padding: 30rpx;*/
	background-color: #fff;
	display: -webkit-flex;
	display: -moz-flex;
	display: -ms-flex;
	display: -o-flex;
	display: flex;
	-ms-align-items: center;
	align-items: center;
}
.avatar {
	width: 80rpx;
	height: 80rpx;
	border-radius: 50%;
	margin: 0 30rpx;
}
.name {
	flex: 1;
	line-height: 3.6em;
	height: 3.6em;
	border-bottom: 1px solid #eee;
}
.partner:last-child .name {
	border-bottom: none;
}
