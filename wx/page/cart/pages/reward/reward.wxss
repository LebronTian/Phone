.container-out {
	height: 600rpx;
	width: 650rpx;
	background-color: #b136b9;
	margin: 100rpx auto;
	border-radius: 40rpx;
	box-shadow: 0 10px 0 #871a8e;
	position: relative;
}
 
.container-in {
	width: 580rpx;
	height: 530rpx;
	background-color: #871a8e;
	border-radius: 40rpx;
	position: absolute;
	left: 0;
	right: 0;
	top: 0;
	bottom: 0;
	margin: auto;
}
 
/**小圆球
box-shadow: inset 3px 3px 3px #fff2af;*/
 
.circle {
	position: absolute;
	display: block;
	border-radius: 50%;
	height: 20rpx;
	width: 20rpx;
}
 
.content-out {
	position: absolute;
	height: 150rpx;
	width: 166.6666rpx;
	background-color: #f5f0fc;
	border-radius: 15rpx;
	box-shadow: 0 5px 0 #d87fde;

	text-align: center;
	line-height: 150rpx;
}
 
/**居中 加粗*/
 
.start-btn {
	position: absolute;
	margin: auto;
	top: 0;
	left: 0;
	bottom: 0;
	right: 0;
	border-radius: 15rpx;
	height: 150rpx;
	width: 166.6666rpx;
	background-color: #ffe400;
	box-shadow: 0 5px 0 #e7930a;
	color: #f6251e;
	text-align: center;
	font-size: 55rpx;
	font-weight: bolder;
	line-height: 150rpx;
}
 
.award-image {
	position: absolute;
	margin: auto;
	top: 0;
	left: 0;
	bottom: 0;
	right: 0;
	height: 140rpx;
	width: 130rpx;
}

.share-btn::after {
	width: 0;
	height: 0;
}
.share-btn {
	width: 80%;
	margin: 40rpx auto;
	text-align: center;
	color: #fff;
}


.footer {
	display: -webkit-flex;
	display: -moz-flex;
	display: -ms-flex;
	display: -o-flex;
	display: flex;
	text-align: center;
	justify-content: space-between;
}
.footer-btn {
	width: 20%;
	margin: 30rpx;
	padding: 10rpx 20rpx;
	border-radius: 10rpx;
	/*font-size: 1.2em;*/
	/*background-color: */
	color: #fff;
}




/*阴影页面样式*/
.page-shadow {
	opacity: 0;
	transition: opacity 0.3s;
}
.page-shadow-show {
	position: fixed;
	left: 0;
	top: 0;
	width: 100%;
	height: 100%;
	background-color: gray;
	opacity: 0.5;
}
.quit-btn {
	width: 50rpx;
	height: 50rpx;
	line-height: 40rpx;
	text-align: center;
	font-size: 1.4em;
	border-radius: 50%;
	background-color: #fff;
	position: absolute;
	right: 0rpx;
	top: 0rpx;
}

.rule-modal {
	width: 90%;
	height: 0;
	overflow: hidden;
	border-radius: 10px;
	position: fixed;
	top: 5%;
	left: 5%;
	right: 0;

    opacity: 0;
	/*transform: translateY(120%);*/
	z-index: 99999;
	transition: 0.3s;
}
.rule-modal-show {
	opacity: 1;
    height: 80%;
}
.rule {
	margin: 20rpx;
	padding: 30rpx;
	color: #fff;
	height: 90%;
	overflow-y: scroll;
	border-radius: 20rpx;
}
.rule-content {
	padding: 0 24rpx;
}

