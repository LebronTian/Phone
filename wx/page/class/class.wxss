/*商品列表样式*/
.body {
	/*margin-top: 90px;*/
}
.body-goodsTitle {
	line-height: 3em;
	color: #999;
	text-align: center;
}
.body-good-subBox {
	display: flex;
	flex-wrap: wrap;
}
.body-good {
	width: calc(50% - 8px);
	margin: 4px;
	padding-bottom: 20rpx;
  padding-top:20rpx;
	background-color: #fff;
	display: flex;
	flex-direction: column;
	align-items: center;
}
.body-goodImg {
	width: 300rpx;
	height: 300rpx;
}
.body-goodTitle {
	font-size: 0.9em;
	color: #666;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
    overflow: hidden;
    text-indent: 10rpx;
}
.body-good-footer {
	width: 80%;
}
.body-goodPrice {
	float: left;
	color: #f80000;
}
.body-goodSell {
	float: right;
	color: #8a8a8a;
}
