.header {
	background-color: #fff;
	position: relative;
	top: 0;
	left: 0;
	width: 100%;
}

.header-btns-box {
	display: flex;
	background-color: #f4f5f5;
	padding: 20rpx 0;
	white-space: nowrap;
}
.header-btn {
	/*color: #884898;*/
	width: 120rpx;
	padding: 0 15rpx;
	display: inline-block;	
}
.header-btnTitle {
	width: 120rpx;
	/*border: 1px solid #884898;*/
	border-width: 1px;
	border-style: solid;
	border-radius: 1em;
	font-size: 0.7em;
	text-align: center;
}
