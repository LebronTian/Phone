.addressList-box {
	margin-bottom: 160rpx;
}

.address {
	margin-top: 30rpx;
	background-color: #fff;
	display: flex;
	padding: 20rpx 0;
}

.address-info {
	width: 85%;
	font-size: 0.9em;
	padding-left: 20rpx;
}
.receiver {
	line-height: 2em;
	display: flex;
	align-items: center;
}
.receiver-phone {
	margin-left: 1.2em;
}
.address-default-tag {
	/*background-color: #7d4690;*/
	border-radius: 5px;
	margin-left: 1.2em;
	width: 2.4em;
	text-align: center;
	color: #fff;
	font-size: 0.9em;
	height: 1.6em;
	line-height: 1.6em;
}
.editBtn {
	height: 40rpx;
	padding: 30rpx 40rpx;
	border-left: 1px solid #efefef;
}
.deleteBtn {
	height: 100%;
	padding: 30rpx 40rpx;
	background-color: #f80000;
}

.editBtn-img {
	width: 40rpx;
	height: 40rpx;
}
.address-area, .address-detail {
	color: #8a8a8a;
	line-height: 1.2em;
}

.address:first-child, .address:first-child .address-area, .address:first-child .address-detail {
	color: #7d4690;
}
.empty {
	text-align: center;
	color: #8a8a8a;
	line-height: 3em;
}

.footer {
	position: fixed;
	bottom: 50rpx;
	width: 40%;
	/*margin: 0 30rpx;*/
	text-align: center;
	color: #fff;
	line-height: 2.4em;
	/*background-color: #7d4690;*/
	border-radius: 5px;
}
.footer-add {
	left: 7%;

}
.footer-get {
	right: 7%;
}


/*阴影页面样式*/
.page-shadow {
	opacity: 0;
	transition: opacity 0.3s;
}
.page-shadow-show {
	position: fixed;
	left: 0;
	top: 0;
	width: 100%;
	height: 100%;
	background-color: gray;
	opacity: 0.5;
}


/*选择规格页样式*/
.editAddress-modal {
	width: 90%;
	height: 0;
	overflow: hidden;
	border-radius: 10px;
	background-color: #fff;
	position: fixed;
	top: 3%;
	left: 5%;
	right: 0;

    opacity: 0;
	/*transform: translateY(120%);*/
	z-index: 99999;
	transition: 0.3s;
}
.editAddress-modal-show {
    opacity: 1;
    height: 45%;
	/*transform: translateY(0);*/
}

.modal-header {
	text-align: center;
	border-bottom: 1px solid #ccc;
	line-height: 3em;
	/*font-size: 1.2em;*/
}

.input-item {
	display: -webkit-flex;
	display: -moz-flex;
	display: -ms-flex;
	display: -o-flex;
	display: flex;
	padding: 0 30rpx;
	line-height: 2.5em;
}
.input-title {
	width: 105px;
}
.address-input {
	flex: 1;
	height: 2.5em;
	min-height: 2.5em;
	/*line-height: 2.5em;*/
}


.vcode-btn {
	box-sizing: content-box;
	width: 180rpx;
	height: 2.3em;
	text-align: center;
}
.vcode-btn::after {
	display: none;
}

.modal-footer {
	position: absolute;
	bottom: 0;
	width: calc(100% - 40rpx);
	background-color: #fff;
	border-top: 1px solid #efefef;
	display: flex;
	justify-content: space-between;
	line-height: 2em;
	padding: 10rpx 20rpx;
}

.confirm {
	padding: 0 30rpx;
	color: #fff;
	background-color: #f80000;
	border-radius: 5px;
}



/*城市选择器*/
.address-picker {
	height: 100%;
	overflow: hidden;
}