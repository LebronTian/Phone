/* page/class/pages/biddingUser/biddingUser.wxss */
page {
	background-color: #fff;
}
.container {
	padding: 0 20rpx;
}
.user {
	display: flex;
	align-items: center;
	padding: 20rpx 0;
	justify-content: space-between;
	border-bottom: 1px solid #ccc;
}
.avatar {
	width: 60rpx;
	height: 60rpx;
	border-radius: 50%;
}
.name {
	width: 45%;
	display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
    overflow: hidden;
}
.empty {
	line-height: 3em;
	text-align: center;
	color: #ccc;
}
