@import "../../../common/wxParse/wxParse.wxss";
@import "../../class.wxss";

.weui-tab__content {
	margin-bottom: 100rpx;
}
/*商品简介页面样式*/
.swiper-item{
  display: block;
  height: 750rpx;
}
.goodHeader-swiper {
	height: 750rpx;
}
.goodHeader-swiperImg {
	width: 100%;
	height: 100%;
}

.classVedio {
	z-index: 9;
	width: 750rpx;
	height: 560rpx;
}

.goodIntro-box {
	display: flex;
	align-items: center;
	padding: 20rpx;
	padding-bottom: 0;
	background-color: #fff;
}
.goodIntro {
	/*border-right: 1px solid #ccc;*/
	width: 85%;
}
.good-shareBtn {
	width: 15%;
	display: flex;
	flex-direction: column;
	align-items: center;
	text-align: center;
	font-size: 0.8em;
	color: #8a8a8a;
	border: none;
	background-color: inherit;
	border-left: 1px solid #ccc;
	padding: 0 10rpx;
	line-height: 1.8em;
}
.good-shareBtn::after {
	content: normal;
}
.good-shareBtn-img {
	width: 50rpx;
	height: 50rpx;
	margin-bottom: 10rpx;
}
.good-title {
	font-size: 1.1em;
}
.good-intro {
	/*padding: 10rpx;*/
	font-size: 0.9em;
	color: #f80000;
	/*border: 1px solid #f80000;*/
}
.good-price {
	margin-top: 10rpx;
	font-size: 1.2em;
	color: #f80000;
	line-height: 1.8em;
}
.good-price-origin {
	font-size: 0.9em;
	color: #8a8a8a;
	text-decoration: line-through;
}
.good-price-sellCnt {
	font-size: 0.9em;
	color: #8a8a8a;
	margin-right: 0.8em;
	float: right;
}
.goodSelect-box {
	margin: 20rpx 0;
	padding: 0 20rpx;
	background-color: #fff;
}
.good-specification-box, .good-score-box, .good-commentShow-header {
	display: flex;
	justify-content: space-between;
	line-height: 2.8em;
}
.good-score-box, .good-commentEg-box {
	border-bottom: 1px solid #bfbfbf;
}
.rightAngel-btn {
	color: #999;
}
.goodRight-box {
	display: -webkit-flex;
	display: -moz-flex;
	display: -ms-flex;
	display: -o-flex;
	display: flex;
	-webkit-flex-wrap: wrap;
	-moz-flex-wrap: wrap;
	-ms-flex-wrap: wrap;
	-o-flex-wrap: wrap;
	flex-wrap: wrap;
	align-items: center;
	padding: 10rpx 20rpx;
}
.rightText {
	font-size: 0.8em;
}
.rightIcon {
	width: 30rpx;
	height: 30rpx;
	margin-left: 20rpx;
	margin-right: 10rpx;
}

.good-group-box {
	background-color: #fff;
	margin-bottom: 20rpx;
	padding: 0 20rpx;
	line-height: 2.8em;
}
.good-group-header {
	display: flex;
	justify-content: space-between;
	border-bottom: 1px solid #ccc;
}
.good-group-partner {
	padding: 5px 0;
	border-bottom: 1px solid #ccc;
	display: flex;
	justify-content: space-between;
	align-items: center;
	line-height: 1.6em;
}
.good-group-partnerImg {
	width: 80rpx;
	height: 80rpx;
	border-radius: 50%;
}
.good-group-partnerInfo {
	font-size: 0.8em;
	width: 65%;
}
.good-group-joinBtn {
	border-radius: 5px;
	text-align: center;
	font-size: 0.9em;
	border-style: solid;
	border-width: 1px;
	padding: 0px 10px;
}

/*商品详情页*/
.detail-extraInfo {
	padding: 0 10rpx;
	margin: 20rpx 0;
	background-color: #fff;
}
.extraInfo-item {
	display: -webkit-flex;
	display: -moz-flex;
	display: -ms-flex;
	display: -o-flex;
	display: flex;
	-ms-align-items: center;
	align-items: center;
	justify-content: space-between;
	font-size: 0.8em;
	border-bottom: 1px solid #ddd;
	padding: 20rpx 0;
}
.extraInfo-item:last-child {
	border-bottom: none;
}
.extraInfo-item__title {
	width: 30%;
	color: #999;
}
.extraInfo-item__content {
	width: 65%;
	line-height: 1.4em;
	color: #444;
}


.good-commentShow {
	background-color: #fff;
	padding: 0 20rpx;
}
.good-commentEg-box {
	color: #666;
	padding-bottom: 30rpx;
}
.good-commentEgHeader {
	display: flex;
	align-items: center;
	padding: 15rpx 0;
}
.good-commentAvatar {
	width: 80rpx;
	height: 80rpx;
	border-radius: 50rpx;
}
.good-commentEgName {
	width: 65%;
	color: #666;
}
.good-commentAvatar, .good-commentEg-tagImg {
	margin-right: 15rpx;
}
.good-commentEg-tagImg {
	width: 50rpx;
	height: 50rpx;
}
/*.good-commentEg-tag {
	color: #7d4690;
}*/


/*评论页面样式*/
.commnet-header {
	padding: 0 20rpx;
	background-color: #fff;
	border-bottom: 1px solid #999;
}
.comment-satisfation {
	display: flex;
	justify-content: space-between;
	color: #333;
	line-height: 2.4em;
	border-bottom: 1px solid #efefef;
}
.comment-satisfation-title {
	border-bottom: 1px solid #efefef;
}
/*.comment-satisfation-degree {
	color: #7d4690;
}*/
.comment-tags-box {
	padding: 20rpx 0;
}
.comment-tag {
	display: inline-block;
	border: 1px solid #8a8a8a;
	color: #8a8a8a;
	border-radius: 5px;
	padding: 0 20rpx;
	line-height: 1.8em;
	margin-right: 30rpx;
}
/*.comment-tag-selected {
	border-color: #7d4690;
	color: #7d4690;
}*/
.comment-item {
	margin-top: 30rpx;
	border-bottom: 1px solid #ccc;
	background-color: #fff;
}
.comment-body {
	margin-bottom: 180rpx;
}

.comment-item {
	padding: 20rpx;
	padding-top: 0;
}
.comment-itemBody {
	border-bottom: 1px solid #efefef;
}

.comment-imgs-box {
	display: flex;
	flex-wrap: wrap;
	/*justify-content: space-between;*/
}
.comment-img {
	width: 30%;
	height: 200rpx;
	margin: 10rpx 1.5%;
}
.comment-itemMess {
	color: #8a8a8a;
	margin: 10rpx 0;
	display: flex;
	justify-content: space-between;
}
.comment-itemReceive-box {
	background-color: #f5f5f5;
	border: 1px solid #ccc;
	margin-top: 20rpx;
	padding: 20rpx;
}
/*.comment-itemReceiver {
	color: #7d4690;
}*/

/*底部操作按钮组*/
.footer {
	position: fixed;
	bottom: 0;
	left: 0;
	width: 100%;
	height: 100rpx;
	text-align: center;
	background-color: #fff;
	border-top: 1px solid #bfbfbf;
	display: flex;
}
.footer-navToCart, .footer-service, .footer-addToFavorite {
	width: 12%;
	background-color: inherit;
	font-size: 0.7em;
	display: flex;
	flex-direction: column;
	align-items: center;
	padding-top: 10rpx;
	border: none;
	border-right: 1px solid #bfbfbf;
}
.footer-service {
	border-radius: 0;
	line-height: inherit;
	padding: 0;
	padding-top: 10rpx;
	margin: 0;
}
.footer-service::after {
	content: normal;
}
.footer-cartImg {
	width: 40rpx;
	height: 40rpx;
	margin-bottom: 10rpx;
}
.footer-addToCart, .footer-buyBtn {
	line-height: 68rpx;
	width: 32%;
	text-align: center;
	display: flex;
	flex-direction: column;
	padding: 16rpx 0;
}
.price__btn {
	font-size: 0.8em;
	line-height: 0.6em;
}
.footer-buyBtn {
	color: #fff;
	/*background-color: #7d4690;*/
}

/*阴影页面样式*/
.page-shadow {
	opacity: 0;
	transition: opacity 0.3s;
}
.page-shadow-show {
	position: fixed;
	left: 0;
	top: 0;
	width: 100%;
	height: 100%;
	background-color: gray;
	opacity: 0.5;
}

/*选择规格页样式*/
.selectSpecification {
	background-color: #fff;
	position: fixed;
	top: 20%;
	left: 0;
	right: 0;
	bottom: 0;
	transform: translateY(120%);
	z-index: 99999;
	transition: 0.3s;
}
.select-main {
	padding: 30rpx;
}
.selectSpecification-show {
	transform: translateY(0);
}
.select-header {
	position: relative;
	border-bottom: 1px solid #e6e6e6;
}
.select-goodImg {
	width: 200rpx;
	height: 200rpx;
	border: 1px solid #e6e6e6;
	position: absolute;
	top: -2em;
}

.select-header-content {
	width: 50%;
	padding-left: 240rpx;
}
.select-goodPrice {
	color: #f80000;
}
.select-goodPrice-origin {
	color: #8a8a8a;
}
.select-goodStock {
	color: #bfbfbf;
	font-size: 0.9em;
}
.select-goodSpecial {
	color: #333;
}
.select-cancelBtn {
	position: absolute;
	top: 0;
	right: 0;
}
.select-cancelImg {
	width: 50rpx;
	height: 50rpx;
}

.select-body {
	overflow: scroll;
}
.select-bodySpecial-box {
	border-bottom: 1px solid #e6e6e6;
}
.select-bodySpecial {
	color: #333;
	margin: 30rpx 0;
}
.select-bodySpecial-title {
	margin-bottom: 20rpx;
}
.select-bodySpecial-item {
	display: inline-block;
	margin-right: 20rpx;
	padding: 0 20rpx;
	font-size: 0.9em;
	color: #8a8a8a;
	border: 1px solid #8a8a8a;
	border-radius: 10rpx;
}
.select-bodySpecial-selected {
	color: #fff;
	background-color: #7d4690;
	border: none;
}

.select-bodyNum-box {
	margin-top: 30rpx;
	display: flex;
	justify-content: space-between;
}
.select-bodyNum-title {
	color: #333;
}
.select-bodyNumChg-box {
	display: flex;
}
.select-bodyNum {
	width: 90rpx;
	text-align: center;
	border: 1px solid #bfbfbf;
}
.select-bodyNumChg-btn {
	line-height: 1.4em;
	overflow: visible;
	position: relative;
	left: 0;
	bottom: 0;
}

.select-footer {
	position: absolute;
	bottom: 0;
	left: 0;
	width: 100%;
	height: 100rpx;
	text-align: center;
	background-color: #fff;
	border-top: 1px solid #bfbfbf;
	display: flex;
}
.select-footerCart, .select-footerBuy {
	line-height: 68rpx;
	width: 50%;
	text-align: center;
	display: flex;
	flex-direction: column;
	padding: 16rpx 0;
}
/*.select-footerCart {
	color: #7d4690;
}*/
.select-footerBuy {
	color: #fff;
	/*background-color: #7d4690;*/
}
.empty-page {
	display: flex;
	flex-direction: column;
	align-items: center;
	margin-top: 300rpx;
}
.empty-img {
	width: 200rpx;
	height: 200rpx;
}
.empty-text {
	color: #999;
	line-height: 3.2em;
}

