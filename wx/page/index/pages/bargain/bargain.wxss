/* page/index/pages/bargain/bargain.wxss */
.header {
	position: relative;
	 /* height: 750rpx;  */
	 height: 396rpx; 
}
.bargin-info {
	width: 100%;
	font-size: 0.7em;
	/*height: 2.6em;*/
	text-indent: 1em;
	line-height: 2.6em;
	/*padding: 0 20rpx;*/
	/*display: -webkit-flex;
	display: -moz-flex;
	display: -ms-flex;
	display: -o-flex;
	display: flex;
	justify-content: space-around;*/
	position: absolute;
	bottom: 0;
	background: rgba(0,0,0,0.7);
	color: #fff;
}
.bargin-price {
	font-size: 1.6em;
	margin: 0 10rpx;
}
.origin-price {
	text-decoration: line-through;
}


.main {
	padding-bottom: 30rpx;
}
.bargin__detail-box {
	background-color: #fff;
	padding: 30rpx;
}
.goodTitle {
	font-size: 1.2em;
}
.remainTime {
	font-size: 0.8em;
	color: #ccc;
	line-height: 3em;
	border-bottom: 1px solid #ccc;
	margin-bottom: 30rpx;
}
.avatar {
	width: 80rpx;
	height: 80rpx;
	border-radius: 50%;
	margin-right: 20rpx;
}
.bargin__progress {
	font-size: 0.8em;
	color: #8a8a8a;
}
.barginBtn-box {
	margin-top: 30rpx;
	display: -webkit-flex;
	display: -moz-flex;
	display: -ms-flex;
	display: -o-flex;
	display: flex;
	justify-content: space-around;
	/*font-size: 1.1em;*/
	line-height: 2.4em;
	color: #fff;
	text-align: center;
}
.bargin__progress-box {
	display: -webkit-flex;
	display: -moz-flex;
	display: -ms-flex;
	display: -o-flex;
	display: flex;
	-ms-align-items: center;
	align-items: center;
	/*margin: 30rpx 0;*/
}
.barginBtn {
	background-color: #f80000;
	border-radius: 1.2em;
	margin-right: 20rpx;
	width: 60%;
	color: #fff;
	font-size: 0.8em;
}
.buyBtn {
	width: 30%;
	background-color: #884898;
	border-radius: 1.2em;
	color: #fff;
	font-size: 0.8em;
}
.barginHelpBtn {
	background-color: #f80000;
	border-radius: 1.2em;
	margin: 0 auto;
	width: 80%;
	color: #fff; 
}
.barginHelpedBtn {
	background-color: #999;
	color: #fff;
}
.nav-box {
	margin: 30rpx 0;
	background-color: #fff;
	line-height: 3em;
	text-align: center;
	display: -webkit-flex;
	display: -moz-flex;
	display: -ms-flex;
	display: -o-flex;
	display: flex;
}
.nav {
	width: 50%;
	border-right: 1px solid #ccc;
}
.nav:last-child {
	border-right: none;
}


.good-intro-box {
	margin-top: 30rpx;
	background-color: #fff;
}
.good-intro__title {
	line-height: 3em;
	display: -webkit-flex;
	display: -moz-flex;
	display: -ms-flex;
	display: -o-flex;
	display: flex;
	justify-content: space-between;
	padding: 0 1em;
}
.good-intro {
	background-color: #fff;
	position: relative;
	/*overflow-y: scroll;*/
	transform: translateY(-50%);
	transition: 0.3s;
	width: 100%;
	height: 0;
	opacity: 0;
	display: none;
}
.good-intro-show {
	height: auto;
	z-index: 999;
	opacity: 1;
	transform: translateY(0);
	display: block;
}
.good-intro-quit {
	/*float: right;*/
	position: absolute;
	right: 0;
	/*top: -40rpx;*/
	top: -100rpx;
	padding: 20rpx;
	font-size: 32px;
	line-height: 0.8em;
}
.good-intro-text {
	/*padding: 50rpx 0;*/
}




.barginRecord {
	background-color: #fff;
}
.barginRecord-title {
	border-bottom: 1px solid #ccc;
	line-height: 3em;
	text-indent: 1em;
}
.barginRecord-list {
	padding: 0 20rpx;
}
.barginRecord-item__content {
	display: -webkit-flex;
	display: -moz-flex;
	display: -ms-flex;
	display: -o-flex;
	display: flex;
	-ms-align-items: center;
	align-items: center;
}
.barginRecord-item__time {
	float: right;
	font-size: 0.8em;
	color: #ccc;
}
.barginRecord-item {
	font-size: 0.9em;
	border-bottom: 1px solid #ccc;
	padding: 10rpx 0;
	overflow: hidden;
}
.barginRecord-item:last-child {
	border-bottom: none;
}
.bargain-avatar {
	width: 60rpx;
	height: 60rpx;
	border-radius: 50%;
	margin-right: 20rpx;
}


.shareBtn::after {
	content: normal;
}
.shadow {
	opacity: 0;
	transition: opacity 0.3s;
}
.shadow-show {
	position: fixed;
	left: 0;
	top: 0;
	width: 100%;
	height: 100%;
	background-color: gray;
	opacity: 0.5;
}

.custom-action-sheet {
	background-color: #fff;
	position: fixed;
	/*top: 20%;*/
	left: 0;
	right: 0;
	bottom: 0;
	transform: translateY(120%);
	z-index: 99999;
	transition: 0.3s;
}
.action-sheet-show {
	transform: translateY(0);
}

