.header {
	background-color: #fff;
	border-bottom: 1px solid #ccc;
	padding: 10px;
	display: flex;
	align-items: center;
}
.header-img {
	width: 80px;
	height: 80px;
	margin-right: 30rpx;
}
.header-title {
	width: 55%;
	border-right: 1px solid #ccc;
	font-size: 1.2em;
	line-height: 150rpx;
}
.header-goodsNum-box {
	display: flex;
	flex-direction: column;
	align-items: center;
	text-align: center;
	width: 20%;
}
.header-goodsNum {
	font-size: 1.2em;
}
.header-goodsNum-title {
	font-size: 0.8em;
}

page {
	height: 100%;
}
.main {
	height: 100%;
	display: flex;
}
.main__left {
	/*border-right: 1px solid #ccc;*/
	width: 25%;
}
.main__right {
	background-color: #fff;
	width: 75%;
}
.class-title {
	padding: 20rpx 10rpx;
	text-align: center;
}
.class-title__selected {
	/*padding-left: 16px;
	border-left-width: 4rpx;
	border-left-style: solid;*/
	background-color: #fff;
}
.class-detail {
	padding: 20rpx;
}



.classTitle {
	font-size: 1.2em;
	line-height: 40px;
	text-indent: 1em;
	/*border-top: 1px solid #ccc;*/
}
.subClass {
	padding: 20px 0;
	/*margin-bottom: 10px;*/
	/*padding-bottom: 10px;*/
	height: 60px;
}
.subClass:last-child {
	border-bottom: 1px solid #ccc;
}
.subClass-img {
	height: 60px;
	width: 60px;
	margin: 0 10px;
	float: left;
}
.subClass-title {
	margin-bottom: 16rpx;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
    overflow: hidden;
}
.subClass-price {
	font-size: 1.1em;
	color: #f80000;
	float: left;
}
.selectNum-box {
	height: 1.2em;
	float: right;
	display: -webkit-flex;
	display: -moz-flex;
	display: -ms-flex;
	display: -o-flex;
	display: flex;
	-ms-align-items: center;
	align-items: center;
	margin-right: 30rpx;
	/*font-size: 1.2em;*/
}
.selectedNum {
	margin: 0 30rpx;
	font-size: 1.2em;
}
.selectBtn {
	height: 40rpx;
	width: 40rpx;
	text-align: center;
	/*line-height: 40rpx;*/
	border-radius: 50%;
	color: #fff;
	font-size: 1.2em;
	line-height: 0.9em;
}
.selectSpecials {
	position: relative;
	border-radius: 16rpx;
	float: right;
	margin-right: 30rpx;
	color: #fff;
	font-size: 0.8em;
	padding: 0 20rpx;
}



.footer {
	background-color: #e6e6e6;
	text-align: center;
	display: -webkit-flex;
	display: -moz-flex;
	display: -ms-flex;
	display: -o-flex;
	display: flex;
	justify-content: space-between;
	line-height: 50px;
}
.price-box {
	margin-left: 40rpx;
}
.cart-accountPrice {
	color: #f80000;
	font-size: 1.2em;
}
.cart-accountBtn {
	position: relative;
	color: #fff;
	width: 25%;
	line-height: 50px;
	font-size: 1.1em;
}

.shadow {
	opacity: 0;
	transition: opacity 0.3s;
}
.shadow-show {
	position: fixed;
	left: 0;
	top: 0;
	width: 100%;
	height: 100%;
	background-color: gray;
	opacity: 0.5;
}
.specials-modal {
	background-color: #fff;
	position: fixed;
	width: 90%;
	top: -20%;
	left: 5%;
	transform: translateY(120%);
	z-index: 99999;
	transition: 0.3s;
	border-radius: 20rpx;
	overflow: hidden;
}
.modal-header {
	display: -webkit-flex;
	display: -moz-flex;
	display: -ms-flex;
	display: -o-flex;
	display: flex;
	justify-content: space-between;
	padding: 20rpx;
}
.select-cancelImg {
	width: 50rpx;
	height: 50rpx;
}

.selectSpecials-box {
	font-size: 0.9em;
	padding: 20rpx;
}
.select-bodySpecial {
	color: #333;
	/*margin: 30rpx 0;*/
}
.select-bodySpecial-title {
	margin-bottom: 10rpx;
}
.select-bodySpecial-item {
	display: inline-block;
	margin-right: 20rpx;
	padding: 0 20rpx;
	font-size: 0.9em;
	color: #8a8a8a;
	border: 1px solid #8a8a8a;
	border-radius: 16rpx;
}
.select-bodySpecial-selected {
	color: #fff;
	background-color: #7d4690;
	border: none;
}

.addBtn-box {
	display: -webkit-flex;
	display: -moz-flex;
	display: -ms-flex;
	display: -o-flex;
	display: flex;
	justify-content: space-between;
	margin-top: 20rpx;
	padding: 24rpx;
	background-color: #eee;
}