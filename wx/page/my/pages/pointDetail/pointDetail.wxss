.header {
	padding: 30rpx;
	display: flex;
	justify-content: space-between;
}
.btn-box {
	display: -webkit-flex;
	display: -moz-flex;
	display: -ms-flex;
	display: -o-flex;
	display: flex;
	justify-content: space-between;
	width: 40%;
}
.withdraw {
	color: #fff;
	text-align: center;
	padding: 5rpx 20rpx;
	border-radius: 5px;
	/*font-size: 0.9em;*/
}


.main__empty {
	text-align: center;
}
.main-pointDetail {
	background-color: #fff;
	display: flex;
	justify-content: space-between;
	padding: 30rpx;
	border-bottom: 1px solid #ddd;
}

.main-pointDetail-time {
	font-size: 0.8em;
	color: #ccc;
}
.main-pointDetail-changeNum {
	font-size: 1.4em;
}
.main-pointDetail-add {
	color: #e7c703;
}


.modal {
	overflow: hidden;
	background-color: #fff;
	padding-top: 40rpx;
	position: fixed;
	width: 90%;
	top: 20%;
	left: 5%;
	z-index: 9;
	border-radius: 10px;
}
.modal__title {
	/*text-align: center;*/
	margin: 0 40rpx;
	line-height: 2.4em;
	font-size: 1.2em;
}
.modal__input-box {
	margin: 40rpx;
	display: flex;
	padding-bottom: 20rpx;
	border-bottom: 1px solid #ccc;
}
.modal__input {
	font-size: 1.8em;
	margin-left: 20rpx;
}
.modal__btns {
	display: flex;
}
.modal__btn {
	width: 50%;
	text-align: center;
	line-height: 2em;
	font-size: 1.2em;
}
.modal__btn-confirm {
	color: #fff;
}

/*阴影页面样式*/
.page-shadow {
	opacity: 0;
	transition: opacity 0.3s;
}
.page-shadow-show {
	position: fixed;
	left: 0;
	top: 0;
	width: 100%;
	height: 100%;
	background-color: gray;
	opacity: 0.5;
}