.header {
	margin-bottom: 30rpx;
	/*margin-top: 48px;*/
}
.swiper-item{
  display: block;
  height: 400rpx;
}
.header-swiper {
	height: 400rpx;
}
.header-swiperImg {
	width: 100%;
	height: 100%;
}
.header-placard-box {
	background-color: #fff;
	padding: 20rpx;
	height: 50rpx;
	display: flex;
	justify-content: space-between;
}
.header-placardImg-box {
	width: 50rpx;
	height: 50rpx;
	padding-right: 40rpx;
	/*border-right: 1px solid #884898;*/
}
.header-placardImg {
	width: 50rpx;
	height: 50rpx;
}
.header-swiperCont {
	text-indent: 40rpx;
	width: 75%;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
    overflow: hidden;
}


.body-subNavs-box {
	background-color: #fff;
	display: flex;
	/*justify-content: space-around;*/
	flex-wrap: wrap;
	margin-bottom: 30rpx;
}
.body-subNav {
	width: 120rpx;
	margin: 15rpx;
	display: flex;
	flex-direction: column;
	align-items: center;
}
.body-subNav-img {
	width: 80rpx;
	height: 80rpx;
}
.body-subNav-title {
	font-size: 0.7em;
}

.body-class {
	margin-bottom: 30rpx;
	background-color: #fff;
	text-align: center;
}
.body-classTitle {
  padding: 1em 0;
  color:#333;
  text-align:left;
  margin-left:5px;
}
.body-classPoster-box {
	width: 100%;
	height: 300rpx;
	background-image: url("http://placekitten.com/375/150");
	display: flex;
	align-items: center;
	justify-content: center;
}

.body-classIntro-box {
	width: 50%;
	padding: 20rpx 0;
	font-size: 0.8em;
	line-height: 2em;
	background: rgba(255,255,255,0.5)
}


.body-classGoods-box {
	display: flex;
	flex-wrap: wrap;
}
.body-classGood {
	width: 230rpx;
	font-size: 0.8em;
	margin: 10rpx;
}
.body-goodImg {
	width: 100%;
	height: 260rpx;
}
.body-goodTitle {
	display: -webkit-box;
	-webkit-box-orient: vertical;
	-webkit-line-clamp: 1;
    overflow: hidden;
}
.body-goodPrice {
	color: #f80000;
}

.weui-footer {
	margin-top: 60rpx;
	margin-bottom: 100rpx;
}

